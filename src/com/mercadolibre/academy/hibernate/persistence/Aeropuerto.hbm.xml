<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
          
<hibernate-mapping>
	<class name="com.mercadolibre.academy.hibernate.entity.Vuelo" table="vuelo">
		<id column="id_aerolinea" name="id" type="integer">
			<generator class="increment"></generator>
		</id>
		<property name="nombre"/>
		<property name="origen"/>
		<property name="destino"/>
		
		<one-to-one name="aerolinea" cascade="all"></one-to-one>
		
	</class>          
</hibernate-mapping>